
@{
    ViewBag.Title = "CambiarContrasenia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="central-meta">
    <div class="editing-info">
        <h5 class="f-title"><i class="ti-lock"></i>Cambiar contraseña</h5>

        <form method="post">
            <div class="form-group">
                <input type="password" id="input" required="required" />
                <label class="control-label" for="input">Contraseña actual</label><i class="mtrl-select"></i>

            </div>
            <div class="form-group">
                <input type="password" required="required" />
                <label class="control-label" for="input">Contraseña nueva</label><i class="mtrl-select"></i>
            </div>
            <div class="form-group">
                <input type="password" required="required" />
                <label class="control-label" for="input">Vuelve a escribir la contraseña nueva</label><i class="mtrl-select"></i>
            </div>

            <div class="submit-btns d-flex justify-content-center">
                <button type="button" class="mtr-btn mr-2"><span>Cancelar</span></button>
                <button type="button" id="btnActualizar" class="mtr-btn"><span>Actualizar</span></button>
            </div>
        </form>
    </div>
</div>

